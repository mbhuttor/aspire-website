---
import Layout from '~/layouts/PageLayout.astro';
title: "BI College Aspire Gamber — Excellence in Intermediate Education";
---

<Layout>
  <style>
    body {
      background: white;
      color: black;
      font-family: 'Inter', sans-serif;
      margin: 0;
    }

    h1, h2, h3 {
      font-family: 'Georgia', serif;
      color: black;
    }

    .section-subtitle {
      text-align: center;
      color: black;
      margin-bottom: 2rem;
      font-size: 1.1rem;
      max-width: 720px;
      margin-left: auto;
      margin-right: auto;
    }

    .banner-button {
      background: #dc2626;
      color: white;
      padding: 0.4rem 1.25rem;
      border-radius: 9999px;
      font-weight: 600;
      font-size: 0.85rem;
      text-decoration: none;
    }

    .programs-grid {
      display: grid;
      gap: 2rem;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      padding-top: 1rem;
      color: black;
    }

    .program-card {
      background: #f9fafb;
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.04);
    }

    .admission-steps {
      display: grid;
      gap: 2rem;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      margin-top: 2rem;
    }

    .admission-step {
      background: rgb(253, 253, 253);
      padding: 1.5rem;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.05);
      text-align: center;
    }

    @media (max-width: 768px) {
      .programs-grid {
        grid-template-columns: 1fr;
      }

      .banner-button {
        display: block;
        margin: 0.25rem auto;
        text-align: center;
      }
    }
  </style>

  <!-- Typing Animation Intro -->
  <div id="hero-intro" style="background: white; color: black; font-size: 2rem; display: flex; align-items: center; justify-content: center; height: 100vh; text-align: center;">
    <h1 id="animated-heading"></h1>
  </div>

  <!-- Hero Section -->
  <div id="hero-main" style="display: none;">
    <div style="background: #fef08a; padding: 1rem; text-align: center;">
      <span style="font-weight: 600; font-size: 1rem;">
        Enroll now at BI College Aspire Gamber — Scholarships, expert mentorship & early success.
      </span>
      <div style="margin-top: 1rem;">
        <a href="#programs" class="banner-button">Learn More</a>
        <a href="https://aspirecolleges.edu.pk/online-admission/" class="banner-button" target="_blank">Apply Now</a>
      </div>
    </div>

    <!-- Welcome Video -->
    <div style="padding: 2rem; text-align: center;">
      <video autoplay muted loop playsinline style="width: 100%; max-width: 900px; border-radius: 12px;">
        <source src="/videos/welcome.mp4" type="video/mp4" />
      </video>
    </div>

    <!-- Programs Section -->
    <section id="programs" style="padding: 4rem 1rem;">
      <h2 style="text-align: center; font-size: 2rem;">Our Programs</h2>
      <p class="section-subtitle">Explore the academic paths we offer</p>

      <h3 style="margin-top: 2rem;">Intermediate Programs</h3>
      <div class="programs-grid">
        <div class="program-card">
          <h4>FSc Pre-Medical</h4>
          <p>For students aiming to pursue careers in medicine and life sciences.</p>
        </div>
        <div class="program-card">
          <h4>FSc Pre-Engineering</h4>
          <p>For future engineers interested in physics, chemistry, and math.</p>
        </div>
        <div class="program-card">
          <h4>ICS (Computer Science)</h4>
          <p>Combines computer science with math and physics.</p>
        </div>
        <div class="program-card">
          <h4>FA (Arts)</h4>
          <p>Ideal for students exploring careers in humanities and arts.</p>
        </div>
        <div class="program-card">
          <h4>I.Com (Commerce)</h4>
          <p>Foundation in business, accounting, and commerce-related fields.</p>
        </div>
      </div>

      <h3 style="margin-top: 3rem;">Grades 1–8</h3>
      <div class="programs-grid">
        <div class="program-card">
          <h4>Grade 1 – 5</h4>
          <p>Playful, engaging foundational learning in a supportive environment.</p>
        </div>
        <div class="program-card">
          <h4>Grade 6 – 8</h4>
          <p>Core subjects plus science labs, coding, and creative thinking.</p>
        </div>
      </div>
    </section>

    <!-- Admission Steps -->
    <section id="admission-steps" style="padding: 4rem 1rem; background: #f9fafb;">
      <h2 style="text-align: center; font-size: 2rem;">Admission Steps</h2>
      <p class="section-subtitle">Follow these simple steps to enroll at BI College Aspire Gamber.</p>
      <div class="admission-steps">
        <div class="admission-step">
          <h3>1. Apply Online</h3>
          <p>Submit your application using our online portal.</p>
        </div>
        <div class="admission-step">
          <h3>2. Meet Our Advisors</h3>
          <p>Get personalized guidance on selecting the right program.</p>
        </div>
        <div class="admission-step">
          <h3>3. Confirm Enrollment</h3>
          <p>Finalize your admission and begin your academic journey.</p>
        </div>
      </div>
    </section>
  </div>

  <noscript>
    <style>
      #hero-intro { display: none; }
      #hero-main { display: block !important; }
    </style>
  </noscript>

  <script client:load>
    function initTypingHero() {
      const text = "BI College Aspire Gamber: Start Your Journey";
      const headingEl = document.getElementById("animated-heading");
      const intro = document.getElementById("hero-intro");
      const main = document.getElementById("hero-main");

      if (!headingEl || !intro || !main) return;

      let index = 0;
      headingEl.innerHTML = '';
      intro.style.display = "flex";
      main.style.display = "none";

      function typeLetter() {
        if (index < text.length) {
          headingEl.innerHTML += text.charAt(index);
          index++;
          window.typingTimeout = setTimeout(typeLetter, 80);
        } else {
          setTimeout(() => {
            intro.style.display = "none";
            main.style.display = "block";
          }, 500);
        }
      }

      typeLetter();
    }

    window.addEventListener("DOMContentLoaded", initTypingHero);
    document.addEventListener("astro:after-swap", initTypingHero);
  </script>
</Layout>

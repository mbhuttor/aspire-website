---
import Layout from '~/layouts/PageLayout.astro';
title: "BI College Aspire Gamber — Excellence in Intermediate Education";
---

<Layout>
  <style>
    html {
      scroll-behavior: smooth;
    }

    body {
      background: white;
      color: black;
      font-family: 'Inter', sans-serif;
      margin: 0;
    }

    h1, h2, h3 {
      font-family: 'Georgia', serif;
      color: black;
    }

    .section-subtitle {
      text-align: center;
      color: black;
      margin-bottom: 2rem;
      font-size: 1.1rem;
      max-width: 720px;
      margin-left: auto;
      margin-right: auto;
    }

    .banner-button {
      background: #dc2626;
      color: white;
      padding: 0.4rem 1.25rem;
      border-radius: 9999px;
      font-weight: 600;
      font-size: 0.85rem;
      text-decoration: none;
    }

    .banner-button:hover {
      background: #b91c1c;
    }

    .learn-more {
      font-weight: 600;
      color: #1e40af;
      font-size: 0.9rem;
      text-decoration: none;
    }

    .learn-more:hover {
      text-decoration: underline;
    }

    .programs-grid {
      display: grid;
      gap: 2rem;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      padding-top: 1rem;
      color: black;
    }

    .program-card {
      background: #f9fafb;
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.04);
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
      text-align: center;
    }

    .admission-steps {
      display: grid;
      color: rgb(0, 0, 0);
      gap: 2rem;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      margin-top: 2rem;
    }

    .admission-step {
      background: rgb(253, 253, 253);
      padding: 1.5rem;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.05);
      text-align: center;
    }

    .step-icon {
      color: #facc15;
      margin-bottom: 1rem;
    }

    @media (max-width: 768px) {
      .programs-grid {
        grid-template-columns: 1fr;
      }

      .banner-button {
        display: block;
        margin: 0.25rem auto;
        text-align: center;
      }
    }
  </style>

  <!-- Typing Animation Intro -->
  <div id="hero-intro" style="background: white; color: black; font-size: 2rem; display: flex; align-items: center; justify-content: center; height: 100vh; text-align: center;">
    <h1 id="animated-heading"></h1>
  </div>

  <!-- Hero Section -->
  <div id="hero-main" style="display: none;">
    <div style="background: #fef08a; padding: 0.3rem 1rem;">
      <div style="display: flex; flex-direction: column; align-items: center; gap: 0.4rem;">
        <span style="font-weight: 600; font-size: 1rem; color: black; text-align: center;">
          Enroll now at BI College Aspire Gamber — Scholarships, expert mentorship & early success.
        </span>
        <div style="display: flex; gap: 0.75rem; flex-wrap: wrap; justify-content: center;">
          <a href="#programs" class="banner-button">View Programs</a>
          <a href="#admission-steps" class="banner-button">View Admissions</a>
          <a href="https://aspirecolleges.edu.pk/online-admission/" class="banner-button" target="_blank">Apply Now</a>
        </div>
      </div>
    </div>

    <div style="width: 100%; background: linear-gradient(to bottom, #fef08a, #ffffff); display: flex; justify-content: center; align-items: center; padding: 1.5rem;">
      <video autoplay muted loop playsinline style="width: 100%; max-width: 1000px; height: auto; object-fit: contain; border-radius: 12px; box-shadow: 0 4px 16px rgba(0,0,0,0.1);">
        <source src="/videos/welcome.mp4" type="video/mp4" />
      </video>
    </div>
  </div>

  <noscript>
    <style>
      #hero-intro { display: none; }
      #hero-main { display: block !important; }
    </style>
  </noscript>

  <!-- PROGRAMS SECTION -->
  <section id="programs" style="padding: 4rem 1rem; background-color: #ffffff;">
    <h2 style="text-align: center; font-size: 2.25rem;">Our Programs</h2>
    <p class="section-subtitle">We offer pre-medical, pre-engineering, computer science, commerce, and arts streams for intermediate students.</p>
    <div class="programs-grid">
      <div class="program-card">
        <h3>Pre-Medical</h3>
        <p>Ideal for students aiming for medical and life sciences careers.</p>
      </div>
      <div class="program-card">
        <h3>Pre-Engineering</h3>
        <p>Builds a strong foundation in physics, chemistry, and mathematics.</p>
      </div>
      <div class="program-card">
        <h3>ICS (Computer Science)</h3>
        <p>Focuses on computing, logic building, and modern programming concepts.</p>
      </div>
      <div class="program-card">
        <h3>I.Com (Commerce)</h3>
        <p>Designed for students interested in business, accounting, and finance.</p>
      </div>
      <div class="program-card">
        <h3>FA (Arts)</h3>
        <p>Offers flexibility with subject choices in humanities and social sciences.</p>
      </div>
    </div>
  </section>

  <!-- ADMISSION STEPS -->
  <section id="admission-steps" style="padding: 4rem 1rem; background-color: #f9fafb;">
    <h2 style="text-align: center; font-size: 2.25rem;">Admission Steps</h2>
    <p class="section-subtitle">Follow these simple steps to enroll at BI College Aspire Gamber.</p>
    <div class="admission-steps">
      <div class="admission-step">
        <iconify-icon icon="tabler:book" class="step-icon" width="56" height="56" />
        <h3>Apply Online</h3>
        <p>Submit your application easily from our online portal.</p>
      </div>
      <div class="admission-step">
        <iconify-icon icon="tabler:users-group" class="step-icon" width="56" height="56" />
        <h3>Meet Our Advisors</h3>
        <p>Get guidance to choose your best-fit program.</p>
      </div>
      <div class="admission-step">
        <iconify-icon icon="tabler:clipboard-check" class="step-icon" width="56" height="56" />
        <h3>Confirm Enrollment</h3>
        <p>Secure your seat and begin your educational journey.</p>
      </div>
    </div>
  </section>

  <!-- Scripts -->
  <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js" client:load></script>
  <script client:load>
    function initTypingHero() {
      const text = "BI College Aspire Gamber: Start Your Journey";
      const headingEl = document.getElementById("animated-heading");
      const intro = document.getElementById("hero-intro");
      const main = document.getElementById("hero-main");

      if (!headingEl || !intro || !main) return;

      let index = 0;
      headingEl.innerHTML = '';
      intro.style.display = "flex";
      main.style.display = "none";

      function typeLetter() {
        if (index < text.length) {
          headingEl.innerHTML += text.charAt(index);
          index++;
          window.typingTimeout = setTimeout(typeLetter, 90);
        } else {
          setTimeout(() => {
            intro.style.display = "none";
            main.style.display = "block";
          }, 500);
        }
      }

      typeLetter();
    }

    window.addEventListener("DOMContentLoaded", initTypingHero);
    document.addEventListener("astro:after-swap", initTypingHero);
  </script>
</Layout>

---
import Layout from '~/layouts/PageLayout.astro';
title: "BI College Aspire Gamber — Start Your Journey";
---

<Layout>
  <!-- Typing Animation + Video Container -->
  <div id="hero-container">
    <!-- Typing Animation -->
    <div id="hero-intro">
      <h1 id="animated-heading"></h1>
    </div>

    <!-- Hero Video -->
    <div id="hero-video-wrapper" class="hidden">
      <video autoplay muted loop playsinline id="hero-video">
        <source src="/videos/welcome.mp4" type="video/mp4" />
      </video>
    </div>
  </div>

  <!-- Main Page Content -->
  <div class="page-content">
    <!-- Mission (moved down slightly) -->
    <section class="mission-section" style="margin-top: 5rem;">
      <h2 class="section-title">Our Mission</h2>
      <p class="section-subtitle">
        We believe every student deserves access to education that inspires, challenges, and empowers them to grow into leaders, thinkers, and changemakers of tomorrow.
      </p>
    </section>
    
    <!-- Intermediate Programs -->
    <section id="programs">
      <h2 class="section-title">Intermediate Programs</h2>
      <div class="programs-grid">
        <div class="program-card"><iconify-icon icon="tabler:heartbeat" class="program-icon" /><h4>FSc Pre-Medical</h4><p>Biology, chemistry, and physics for health careers.</p></div>
        <div class="program-card"><iconify-icon icon="tabler:tools" class="program-icon" /><h4>FSc Pre-Engineering</h4><p>Math and physics for engineering fields.</p></div>
        <div class="program-card"><iconify-icon icon="tabler:device-laptop" class="program-icon" /><h4>ICS</h4><p>Computer science and logic foundation.</p></div>
        <div class="program-card"><iconify-icon icon="tabler:palette" class="program-icon" /><h4>FA</h4><p>Creative paths in humanities and arts.</p></div>
        <div class="program-card"><iconify-icon icon="tabler:chart-bar" class="program-icon" /><h4>I.Com</h4><p>Business, accounting, and economics basics.</p></div>
      </div>

      <h2 class="section-title" style="margin-top: 3rem;">Grades 1–8</h2>
      <div class="programs-grid">
        <div class="program-card"><iconify-icon icon="tabler:abacus" class="program-icon" /><h4>Grade 1</h4><p>Reading, math, creativity & play.</p></div>
        <div class="program-card"><iconify-icon icon="tabler:book" class="program-icon" /><h4>Grade 2</h4><p>Writing, speaking, moral growth.</p></div>
        <div class="program-card"><iconify-icon icon="tabler:microscope" class="program-icon" /><h4>Grade 3</h4><p>Science, stories, and curiosity.</p></div>
        <div class="program-card"><iconify-icon icon="tabler:zoom-pan" class="program-icon" /><h4>Grade 4</h4><p>Focus on comprehension & fluency.</p></div>
        <div class="program-card"><iconify-icon icon="tabler:ruler-measure" class="program-icon" /><h4>Grade 5</h4><p>Exam prep and logical writing.</p></div>
        <div class="program-card"><iconify-icon icon="tabler:layers-intersect" class="program-icon" /><h4>Grade 6</h4><p>Projects, soft skills, and teamwork.</p></div>
        <div class="program-card"><iconify-icon icon="tabler:flask" class="program-icon" /><h4>Grade 7</h4><p>Science labs and research mindset.</p></div>
        <div class="program-card"><iconify-icon icon="tabler:school" class="program-icon" /><h4>Grade 8</h4><p>Board exam-style writing & coaching.</p></div>
      </div>
    </section>

    <!-- Admission Steps -->
    <section class="admissions-section">
      <h2 class="section-title">Admission Steps</h2>
      <div class="admission-steps">
        <div class="admission-step"><iconify-icon icon="tabler:book" class="step-icon" /><h4>1. Apply Online</h4><p>Start your application online.</p></div>
        <div class="admission-step"><iconify-icon icon="tabler:users-group" class="step-icon" /><h4>2. Meet Advisors</h4><p>Get help choosing your path.</p></div>
        <div class="admission-step"><iconify-icon icon="tabler:clipboard-check" class="step-icon" /><h4>3. Confirm Enrollment</h4><p>Secure your spot and start learning.</p></div>
      </div>
    </section>
  </div>

  <!-- Scripts -->
  <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js" client:load></script>
  <script>
    function runTypingAndVideo() {
      const heading = document.getElementById("animated-heading");
      const intro = document.getElementById("hero-intro");
      const videoWrapper = document.getElementById("hero-video-wrapper");
      const video = document.getElementById("hero-video");
      const text = "BI College Aspire Gamber: Start Your Journey";

      if (!heading || !intro || !videoWrapper || !video) return;

      heading.textContent = "";
      intro.style.display = "flex";
      videoWrapper.classList.add("hidden");
      video.pause();
      video.currentTime = 0;

      let i = 0;
      function typeIt() {
        if (i < text.length) {
          heading.textContent += text.charAt(i);
          i++;
          setTimeout(typeIt, 80);
        } else {
          setTimeout(() => {
            intro.style.display = "none";
            videoWrapper.classList.remove("hidden");
            video.play();
          }, 600);
        }
      }

      typeIt();
    }

    document.addEventListener("astro:after-swap", () => {
      runTypingAndVideo();
    });

    window.addEventListener("load", () => {
      runTypingAndVideo();
    });
  </script>

  <style>
    body {
      margin: 0;
      font-family: 'Inter', sans-serif;
      background: linear-gradient(to bottom, #fef08a, white);
      color: black;
    }

    #hero-container {
      height: 90vh;
      position: relative;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }

    #hero-intro {
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 2rem;
      font-family: 'Georgia', serif;
      color: black;
      height: 100%;
      width: 100%;
      position: absolute;
      z-index: 2;
      background-color: white;
    }

    #hero-video-wrapper {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      z-index: 1;
    }

    #hero-video-wrapper video {
      max-width: 900px;
      width: 100%;
      border-radius: 12px;
    }

    .hidden {
      display: none;
    }

    .section-title {
      text-align: center;
      font-size: 2rem;
      margin-top: 4rem;
      color: black;
    }

    .section-subtitle {
      text-align: center;
      max-width: 720px;
      margin: 1rem auto 2rem;
      font-size: 1.1rem;
      color: black;
    }

    .programs-grid,
    .admission-steps {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      padding: 2rem;
    }

    .program-card,
    .admission-step {
      background: white;
      padding: 1.5rem;
      border-radius: 10px;
      box-shadow: 0 6px 10px rgba(0,0,0,0.05);
      text-align: left;
    }

    .program-icon,
    .step-icon {
      font-size: 2rem;
      color: #1e40af;
      margin-bottom: 0.5rem;
    }

    .button {
      display: inline-block;
      margin-top: 1rem;
      padding: 0.5rem 1rem;
      background-color: #1e40af;
      color: white;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 600;
    }

    h4, p {
      color: black;
    }
  </style>
</Layout>
